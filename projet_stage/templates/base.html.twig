<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <link rel="stylesheet" href="css/index.css">
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {# background sombre #}
        <div id='background_form' style="display: none"></div>

        <div id="conteneur_all">
            <div id="backgroung_navbar">
                <div class="naviga_btn">
                    <div class="row">
                        <div class="col">
                            <a href="listeblog" class="btn_navbar_test">Blog</a>
                            <a href="listejeu" class="btn_navbar_test">Jeu</a>
                            {% if app.user %}
                                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_CONTRIBUTOR') %}
                                    <a href="listeproto" class="btn_navbar_test">Proto</a>
                                {% elseif is_granted('ROLE_USER') %}
                                    <a href="pagerequetecontrib" class="btn_navbar_test">Devenir contributeur</a>  
                                {% endif %}
                            {% endif %}
                        </div>

                        <div class="col text-end">
                            {% if app.user %}
                                <span class="white">Bonjour</span><a href="pageuser{{ app.user.id }}" class="btn_navbar_test">{{app.user.getName()}}</a>
                                {% set base64 = app.user.avatar %}
                                {% if base64 %}
                                    <img src="data:image/png;base64, {{ base64 }}" style="max-width:40px;max-height:40px">
                                {% endif %}
                                <a href="logout" class="btn_navbar_test">DÃ©connexion</a>
                            {% else %}
                                <a href="login" class="btn_navbar_test">Connexion</a>
                                <a href="register" class="btn_navbar_test">Inscription</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
